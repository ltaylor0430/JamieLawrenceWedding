<!DOCTYPE html>
<html>
<head>
  <title><%=full_title(yield(:title)) %></title>
   
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Lobster", media:"all" %>
  <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Cabin", media:"all" %>

  <link rel="shortcut icon" href="<%=image_path 'favicon.ico'%>" >
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>    
  </head>
  
<body>
  <%= render 'layouts/header' %>    
<div id="<%=getContainerId(yield(:title))%>" class="clearfix">
    <footer class="footer <%= 'hide' if (yield(:title)).empty? == false%>" style="">
      <div class="pull-right" style="margin-right:10px" >
        <div id="next" class=""  style="text-align:right">
          <h3><span style="color:orange">Jamie</span><br/>Lawrence<br/><span style="color:black">September 14, 2013</span></h3>
        </div>
        
      </div>
    </footer>
      
  <div class="row ccwrapper" style="margin-left:470px;">
     
    <div id="contentContainer" class="clearfix content">
       <%= yield %>
     </div>
  </div>
  
</div>
    <%= render 'layouts/footer' %>    

  </body>
  
  </script>
</html>
